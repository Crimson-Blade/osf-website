{
    "kind": "collectionType",
    "collectionName": "blogs",
    "info": {
        "singularName": "blog",
        "pluralName": "blogs",
        "displayName": "Blog"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "uid": {
            "type": "uid",
            "required": true,
            "targetField": "title"
        },
        "content": {
            "type": "richtext",
            "required": true
        },
        "categories": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::category.category",
            "mappedBy": "blog"
        },
        "publish_date": {
            "type": "date",
            "required": true
        },
        "cover_image": {
            "allowedTypes": [
                "images"
            ],
            "type": "media",
            "multiple": false
        },
        "content_media": {
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ],
            "type": "media",
            "multiple": true
        }
    }
}
